<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aniweeb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/morado_oscuro</item>
        <item name="colorPrimaryVariant">@color/morado_oscuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morado_oscuro</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <!-- color hamburguer -->
    <style name="DrawerIcon" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/morado_oscuro</item>
    </style>

    <style name="Theme.Aniweeb.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>

    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/morado_oscuro</item>
        <item name="android:textColorHint">@color/morado_oscuro</item>
    </style>

    <style name="MoradoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/morado_oscuro</item>
        <item name="android:textColorHint">@color/morado_oscuro</item>

    </style>

    <style name="roundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
    </style>

    <style name="Theme.Aniweeb.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Aniweeb.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>